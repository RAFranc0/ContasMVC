@model ContasMVC.ViewModels.VisaoGeralViewModel;

@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-center">Visão Geral</h1>
<div class="container d-flex justify-content-around">
    <div class="border border-danger d-flex justify-content-center" id="index-vg-despesas">
        <table class="table table-hover text-center align-middle w-75">
            <thead>
            <tr>
                <th>Valor</th>
                <th>Data</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var despesa in Model.VisaoGeralDespesas)
            {
                <tr>
                    <td>@despesa.Valor.ToString("C")</td>
                    <td>@despesa.Data.ToString("dd/MM/yyyy")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    
    <div class="border border-success d-flex justify-content-center" id="index-vg-receitas">
        <table class="table table-hover text-center align-middle">
            <thead>
            <tr>
                <th>Valor</th>
                <th>Tipo</th>
                <th>Usuário</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var receita in Model.VisaoGeralReceitas)
            {
                <tr>
                    <td>@receita.Valor.ToString("C")</td>
                    <td>@receita.Tipo</td>
                    <td>@receita.Usuario</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
